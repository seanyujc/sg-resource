{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "declaration": true,
    "types": ["reflect-metadata", "jest"],
    "typeRoots": ["node_modules/@types", "./typeings"]
  },
  "exclude": ["dist", "test"]
}
