{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "declaration": true,
    "types": [
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./typeings"
    ]
  },
  "exclude": [
    "dist"
  ]
}