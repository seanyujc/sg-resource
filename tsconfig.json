{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "downlevelIteration": true,
    "declaration": true,
    "types": [
      "reflect-metadata"
    ],
    "typeRoots": [
      "./typeings"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}